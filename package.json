{
  "name": "favorite",
  "version": "1.0.0",
  "description": "Preview any image as favicon on hover - works on any website ðŸ¥³ðŸ¥³",
  "scripts": {
    "build": "npm run build:popup && npm run build:content && npm run build:background",
    "build:popup": "vite build",
    "build:content": "vite build --config vite.content.config.mts",
    "build:background": "vite build --config vite.background.config.mts",
    "build:tsc": "tsc",
    "dev": "npm run clean && npm run build && npm run watch",
    "watch": "nodemon --watch src --watch manifest.json --watch icons --ext ts,tsx,js,json,png,css --exec \"npm run build\"",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "release": "node release.js",
    "release:dry": "node release.js --dry-run",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@types/chrome": "^0.0.254",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.16",
    "happy-dom": "^20.0.11",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.3",
    "vite": "^6.4.1",
    "vite-plugin-static-copy": "^3.1.5",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zustand": "^5.0.10"
  }
}
